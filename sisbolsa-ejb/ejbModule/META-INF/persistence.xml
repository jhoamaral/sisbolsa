		<class>br.com.domain.Item</class>
		<class>br.com.domain.Pessoa</class>
		<class>br.com.domain.Curso</class>
		<class>br.com.domain.Socioeconeomico</class>
		<class>br.com.domain.Pessoaben</class>
		<class>br.com.domain.Cursofaculdade</class>
		<class>br.com.domain.Identidade</class>
		<class>br.com.domain.Familiar</class>
		<class>br.com.domain.Tipoevento</class>
		<class>br.com.domain.Situacaojuridica</class>
		<class>br.com.domain.Eventofixo</class>
